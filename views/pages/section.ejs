<%- include('../shared/header.ejs') %>
<div class="book-page">
  <nav class='sidebar-nav'>
    <ol>
		<% let navChapter = 1 
		while(table[navChapter]) { %>
			<li class='sidebar-li'><%= table[navChapter][0] %>
			<ol class="section-sublist selected" id="sidebar-nav-sublist-<%=navChapter%>" style="display: none;">
        <li value='0' class='sublist-li'><a href="/book/<%=navChapter%>"><%= table[navChapter][0] %></a></li>
		  <% let navSection = 1 %>
		  <% while(table[navChapter][navSection]) { %>
			  <li class='sublist-li'><a href="/book/<%=navChapter + '#' + navChapter + '.' + navSection%>"><%= table[navChapter][navSection] %></a></li>
			  <% navSection++
		  } %>
			</ol>
			</li>
			<% navChapter++
		} %>
		</ol>
  </nav>
  <article>
    <section>
    <% 
    let lastSectionId = -1
    let first = true
    sections.forEach( (part) => {
      if(part.section_id !== lastSectionId) {
        // New section, new title!!!
        lastSectionId = part.section_id

        if(first) {
          %> <h2><%= chapter + '. ' + part.title %></h2> <%
          first = false
        } else {
          %> </section><section> <h3 id="<%- chapter + '.' + part.sect_num %>"><%= chapter + '.' + part.sect_num + ' ' + part.title %></h3> <%
        }
      } 
      switch(part.type) {
      case 1: //paragraph
      %> <p><%= part.content %></p> <% break
      case 2: //letter
      %> <p class='letter'><%= part.content %></p> <% break
      case 3: //footnote
      %> <sup><%= part.content %></sup> <% break
      case 4: //noindent
      %> <p class='noindent'><%= part.content %></p> <% break
      case 5: //diagram
      %> <pre class='diagram'><%= part.content %></pre> <% break
      case 6: //code
      %> <code><%= part.content %></code> <% break
      case 7: //non section header
      %> <h4><%= part.content %></h4> <% break
      case 8: //image
      %><div class="img-wrap"><img class='content-image' <%- part.content.split("SPLIT!")[0] %>></div>
      <h5><%= part.content.split("SPLIT!")[1] %></h5> <% break
      case 9: //list
      %> <ul> <%
      part.content.split('â—¼').slice(1).forEach( (listItem) => { 
        %> <li><%- listItem %></li> <%
      })
      %> </ul> <% break 
      }
    }) %>
    </section>
    <div class="center-link-btn-div">
      <% if(chapter > 1) { %> <a class="link-btn" href="/book/<%- Number(chapter) - 1 %>">Prev</a> <% } %>
      <% if(chapter < 13) { %> <a class="link-btn" href="/book/<%- Number(chapter) + 1 %>">Next</a> <% } %>
    </div>
  </article>
</div>
<%- include('../shared/footer.ejs') %>